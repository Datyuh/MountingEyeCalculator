<Window x:Name="WindodMain"
    x:Class="MountingEyeCalculator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Калькулятор монтажных проушин"
    Width="800"
    Height="450"
    AllowsTransparency="True"
    Background="{x:Null}"
    FontFamily="Calibri"
    FontSize="14"
    Icon="Resources/Calculation_Eyelets.ico"
    ResizeMode="CanResizeWithGrip"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen">

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>

                    <DoubleAnimation
                        FillBehavior="HoldEnd"
                        Storyboard.TargetProperty="Opacity"
                        From="0.5"
                        To="1"
                        Duration="0:0:1" />
                    <DoubleAnimation
                        AutoReverse="True"
                        BeginTime="0:0:1"
                        Storyboard.TargetName="GradientStopWhite"
                        Storyboard.TargetProperty="Offset"
                        From="0.25"
                        To="0.75"
                        Duration="0:0:4" />
                    <DoubleAnimation
                        BeginTime="0:0:5"
                        Storyboard.TargetName="ImageLogo"
                        Storyboard.TargetProperty="Opacity"
                        From="0"
                        To="0.4"
                        Duration="0:0:2.5" />
                    <DoubleAnimation
                        BeginTime="0:0:9"
                        Storyboard.TargetName="GradientStopWhite"
                        Storyboard.TargetProperty="Offset"
                        From="0.25"
                        To="0.5"
                        Duration="0:0:2.5" />

                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid>

        <Border
            Grid.ColumnSpan="2"
            BorderBrush="#FF515D6D"
            BorderThickness="4"
            CornerRadius="12">
            <Border.Background>
                <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.8,0.2" EndPoint="0.2,0.7">
                    <GradientStop Offset="0" Color="#FF3E4249" />
                    <GradientStop Offset="0.25" Color="#FF82A7E9" />
                    <GradientStop x:Name="GradientStopWhite" Offset="0.25" Color="#FFC0D7FF" />
                    <GradientStop Offset="0.75" Color="#FF82A7E9" />
                    <GradientStop Offset="0.96" Color="#FF3E4249" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Image
                    x:Name="ImageLogo"
                    Grid.RowSpan="4"
                    Grid.ColumnSpan="4"
                    Margin="0,45,0,5"
                    Opacity="0"
                    Source="/Resources/LogoVNM2011_deep2.png" />

                <Grid
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Name="BorderWindow"
                        Grid.ColumnSpan="4"
                        Background="#FF2C3038"
                        BorderThickness="0"
                        CornerRadius="10,10,0,0"
                        PreviewMouseLeftButtonDown="Border_PreviewMouseLeftButtonDown">
                        <Grid>
                            <StackPanel
                                Grid.Column="0"
                                Margin="20,5,0,0"
                                Orientation="Horizontal">
                                <Image Margin="0,0,0,3" Source="Resources/Calculation_Eyelets.ico" />
                                <TextBlock
                                    Width="270"
                                    Margin="10,5,0,5"
                                    VerticalAlignment="Bottom"
                                    FontSize="16"
                                    Foreground="#FFFEFBC1"
                                    Text="Калькулятор монтажных проушин" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Button
                        Grid.Row="0"
                        Grid.Column="3"
                        Margin="0,0,0,20"
                        Click="Button_Click_1"
                        FontFamily="Calibri"
                        FontSize="16"
                        ToolTip="Закрыть">
                        <iconPacks:PackIconMaterial
                            Width="10"
                            Height="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Kind="WindowClose" />
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="Foreground" Value="Red" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="Background" Value="Red" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="#FF515D6D"
                                    BorderThickness="1,0,0,1"
                                    CornerRadius="0,9,0,0">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="0,0,0,20"
                        Click="Button_Click_2"
                        FontFamily="Calibri"
                        FontSize="16">
                        <iconPacks:PackIconMaterial
                            Name="WindowMaximize"
                            Width="10"
                            Height="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Kind="WindowMaximize" />
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="Gray" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="Background" Value="Gray" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border
                                    Background="{TemplateBinding Property=Background}"
                                    BorderBrush="#FF515D6D"
                                    BorderThickness="1,0,0,1">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,0,0,20"
                        Click="Button_Click"
                        FontFamily="Calibri"
                        FontSize="16"
                        FontWeight="Bold"
                        ToolTip="Свернуть">
                        <iconPacks:PackIconMaterial
                            Width="10"
                            Height="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Kind="WindowMinimize" />
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="Gray" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="Background" Value="Gray" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border
                                    Background="{TemplateBinding Property=Background}"
                                    BorderBrush="#FF515D6D"
                                    BorderThickness="1,0,0,1"
                                    CornerRadius="0,0,0,9">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <Grid
                    Grid.Row="1"
                    Grid.Column="1"
                    ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Image
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,5,0,0"
                        Source="Resources/image/data3.png"
                        Stretch="Uniform">
                        <Image.RenderTransform>
                            <ScaleTransform />
                        </Image.RenderTransform>
                    </Image>
                    <Image
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,5,0,0"
                        Source="Resources/image/data1.png"
                        Stretch="Uniform">
                        <Image.RenderTransform>
                            <ScaleTransform />
                        </Image.RenderTransform>
                    </Image>
                    <Image
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,5,0,0"
                        Source="Resources/image/data.png"
                        Stretch="Uniform">
                        <Image.RenderTransform>
                            <ScaleTransform />
                        </Image.RenderTransform>
                    </Image>
                    <Image
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,5,0,0"
                        Source="Resources/image/data2.png"
                        Stretch="Uniform">
                        <Image.RenderTransform>
                            <ScaleTransform />
                        </Image.RenderTransform>
                    </Image>
                    <Image
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,5,0,0"
                        Source="Resources/image/data2_2.png"
                        Stretch="Uniform">
                        <Image.RenderTransform>
                            <ScaleTransform />
                        </Image.RenderTransform>
                    </Image>
                    <Image
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="0,5,0,5"
                        Source="Resources/image/data5.png"
                        Stretch="Uniform">
                        <Image.RenderTransform>
                            <ScaleTransform />
                        </Image.RenderTransform>
                    </Image>
                    <Image
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,5,0,0"
                        Source="Resources/image/data4.png"
                        Stretch="Uniform">
                        <Image.RenderTransform>
                            <ScaleTransform />
                        </Image.RenderTransform>
                    </Image>

                </Grid>

                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Vertical">
                    <TextBlock
                        Height="198"
                        Margin="5,5,0,0"
                        VerticalAlignment="Top"
                        Foreground="White"
                        TextWrapping="Wrap"><Span><Run Text="D  - Динамический коэффициент в горизонте" /></Span><LineBreak /><Span><Run Text="D1 - Динамический коэффициент в промежуточном положении" /></Span><LineBreak /><Span><Run Text="y - Расстояние от центра отверстия проушины до опоры" /></Span><LineBreak /><Span><Run Text="W - Момент сопротивления сечения монтажной проушины" /></Span><LineBreak /><Span><Run Text="F1 - Пощадь сечения монтажной проушины" /></Span><LineBreak /><Span FontFamily="Segoe UI"><Run Text="σt - " /></Span><Span><Run Text="Предел текучести материала монтажной проушины" /></Span><LineBreak /><Span FontFamily="Segoe UI"><Run Text="δ - " /></Span><Span><Run Text="толшина проушины" /></Span><LineBreak /><Span><Run Text="DO - диаметр отверстия проушины" /></Span><LineBreak /><Span><Run Text="h - высота проушины" /></Span><LineBreak /><Span FontFamily="Segoe UI"><Run Text="Для расчета монтажной проушины можно показать, что сила c1 максимальна при угле a = 40,7" /></Span><Span><Run Text="°" /></Span><LineBreak /><LineBreak /></TextBlock>

                    <Border
                        Height="3"
                        Background="White"
                        BorderThickness="1"
                        CornerRadius="5" />

                    <StackPanel Margin="5,5,0,0" Orientation="Horizontal">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <RadioButton
                                x:Name="WithBushing"
                                Grid.Column="0"
                                Content="С втулкой"
                                Foreground="White" />
                            <RadioButton
                                x:Name="WithoutBushing"
                                Grid.Column="1"
                                Content="Без втулки"
                                Foreground="White" />
                        </Grid>
                    </StackPanel>
                    <Button
                        Width="75"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Button" />
                    <Button
                        Width="75"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Button" />
                    <Button
                        Width="75"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Button" />
                    <Button
                        Width="75"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Button" />
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
