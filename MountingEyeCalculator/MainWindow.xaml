<Window
    x:Class="MountingEyeCalculator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fonds="clr-namespace:MountingEyeCalculator.Fonds"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="WindodMain"
    Title="Калькулятор монтажных проушин"
    Width="850"
    Height="600"
    AllowsTransparency="True"
    Background="{x:Null}"
    FontFamily="Calibri"
    FontSize="14"
    Icon="/Resources/Calculation_Eyelets.ico"
    ResizeMode="CanResizeWithGrip"
    SourceInitialized="Window_SourceInitialized"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>

                    <DoubleAnimation
                        FillBehavior="HoldEnd"
                        Storyboard.TargetProperty="Opacity"
                        From="0.5"
                        To="1"
                        Duration="0:0:1" />
                    <DoubleAnimation
                        AutoReverse="True"
                        BeginTime="0:0:1"
                        Storyboard.TargetName="GradientStopWhite"
                        Storyboard.TargetProperty="Offset"
                        From="0.25"
                        To="0.75"
                        Duration="0:0:4" />
                    <DoubleAnimation
                        BeginTime="0:0:5"
                        Storyboard.TargetName="ImageLogo"
                        Storyboard.TargetProperty="Opacity"
                        From="0"
                        To="0.4"
                        Duration="0:0:2.5" />
                    <DoubleAnimation
                        BeginTime="0:0:9"
                        Storyboard.TargetName="GradientStopWhite"
                        Storyboard.TargetProperty="Offset"
                        From="0.25"
                        To="0.5"
                        Duration="0:0:2.5" />

                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid>

        <Border
            Grid.ColumnSpan="2"
            BorderBrush="#FF515D6D"
            BorderThickness="4"
            CornerRadius="12">
            <Border.Background>
                <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.8,0.2" EndPoint="0.2,0.7">
                    <GradientStop Offset="0" Color="#FF3E4249" />
                    <GradientStop Offset="0.25" Color="#FF82A7E9" />
                    <GradientStop x:Name="GradientStopWhite" Offset="0.25" Color="#FFC0D7FF" />
                    <GradientStop Offset="0.75" Color="#FF82A7E9" />
                    <GradientStop Offset="0.96" Color="#FF3E4249" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Image
                    x:Name="ImageLogo"
                    Grid.RowSpan="4"
                    Grid.ColumnSpan="4"
                    Margin="0,45,0,5"
                    Opacity="0"
                    Source="/Resources/LogoVNM2011_deep2.png" />

                <Grid
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Name="BorderWindow"
                        Grid.ColumnSpan="4"
                        Background="#FF2C3038"
                        BorderThickness="0"
                        CornerRadius="10,10,0,0"
                        PreviewMouseLeftButtonDown="rctHeader_PreviewMouseLeftButtonDown"
                        PreviewMouseLeftButtonUp="rctHeader_PreviewMouseLeftButtonUp"
                        PreviewMouseMove="rctHeader_PreviewMouseMove">
                        <Grid>
                            <StackPanel
                                Grid.Column="0"
                                Margin="20,5,0,0"
                                Orientation="Horizontal">
                                <Image Margin="0,0,0,3" Source="Resources/Calculation_Eyelets.ico" />
                                <TextBlock
                                    Width="270"
                                    Margin="10,5,0,5"
                                    VerticalAlignment="Bottom"
                                    FontSize="16"
                                    Foreground="#FFFEFBC1"
                                    Text="Калькулятор монтажных проушин" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Button
                        Grid.Row="0"
                        Grid.Column="3"
                        Margin="0,0,0,20"
                        Click="Button_Click_1"
                        FontFamily="Calibri"
                        FontSize="16"
                        ToolTip="Закрыть">
                        <iconPacks:PackIconMaterial
                            Width="10"
                            Height="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Kind="WindowClose" />
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="Foreground" Value="Red" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="Background" Value="Red" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="#FF515D6D"
                                    BorderThickness="1,0,0,1"
                                    CornerRadius="0,9,0,0">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="0,0,0,20"
                        Click="Button_Click_2"
                        FontFamily="Calibri"
                        FontSize="16">
                        <iconPacks:PackIconMaterial
                            Name="WindowMaximize"
                            Width="10"
                            Height="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Kind="WindowMaximize" />
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="Gray" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="Background" Value="Gray" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border
                                    Background="{TemplateBinding Property=Background}"
                                    BorderBrush="#FF515D6D"
                                    BorderThickness="1,0,0,1">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,0,0,20"
                        Click="Button_Click"
                        FontFamily="Calibri"
                        FontSize="16"
                        FontWeight="Bold"
                        ToolTip="Свернуть">
                        <iconPacks:PackIconMaterial
                            Width="10"
                            Height="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Kind="WindowMinimize" />
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="Gray" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="Background" Value="Gray" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border
                                    Background="{TemplateBinding Property=Background}"
                                    BorderBrush="#FF515D6D"
                                    BorderThickness="1,0,0,1"
                                    CornerRadius="0,0,0,9">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <Grid
                    Grid.Row="1"
                    Grid.Column="1"
                    ClipToBounds="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Image
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,5,0,0"
                        Source="Resources/image/data3.png"
                        Stretch="Uniform">
                        <Image.RenderTransform>
                            <ScaleTransform />
                        </Image.RenderTransform>
                    </Image>
                    <Image
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,5,0,0"
                        Source="Resources/image/data1.png"
                        Stretch="Uniform">
                        <Image.RenderTransform>
                            <ScaleTransform />
                        </Image.RenderTransform>
                    </Image>
                    <Image
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5,5,5,5"
                        Source="Resources/image/data.png"
                        Stretch="Uniform">
                        <Image.RenderTransform>
                            <ScaleTransform />
                        </Image.RenderTransform>
                    </Image>
                    <Image
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,5,0,0"
                        Source="Resources/image/data2.png"
                        Stretch="Uniform">
                        <Image.RenderTransform>
                            <ScaleTransform />
                        </Image.RenderTransform>
                    </Image>
                    <Image
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,5,0,0"
                        Source="Resources/image/data2_2.png"
                        Stretch="Uniform">
                        <Image.RenderTransform>
                            <ScaleTransform />
                        </Image.RenderTransform>
                    </Image>
                    <Image
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="0,5,0,5"
                        Source="Resources/image/data5.png"
                        Stretch="Uniform">
                        <Image.RenderTransform>
                            <ScaleTransform />
                        </Image.RenderTransform>
                    </Image>
                    <Image
                        Name="FirstImage"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,5,0,0"
                        Source="Resources/image/data4.png"
                        Stretch="Uniform">
                        <Image.RenderTransform>
                            <ScaleTransform />
                        </Image.RenderTransform>
                    </Image>
                    <Grid
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="5"
                        Background="{Binding EnterResultColorBack}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="{Binding EnterResultColorBack}"
                            FontSize="38"
                            FontWeight="Bold"
                            Foreground="Black"
                            Text="{Binding EnterResult, Mode=OneWay}"
                            TextWrapping="Wrap" />
                    </Grid>

                </Grid>

                <Grid Grid.Row="1" Grid.Column="0">
                    <StackPanel Grid.RowSpan="3" Orientation="Vertical">
                        <TextBlock
                            Height="185"
                            Margin="5,5,0,0"
                            VerticalAlignment="Top"
                            Foreground="White"
                            TextWrapping="Wrap"><Span><Run Text="D  - Динамический коэффициент в горизонте" /></Span><LineBreak /><Span><Run Text="D1 - Динамический коэффициент в промежуточном положении" /></Span><LineBreak /><Span><Run Text="y - Расстояние от центра отверстия проушины до опоры" /></Span><LineBreak /><Span><Run Text="W - Момент сопротивления сечения монтажной проушины" /></Span><LineBreak /><Span><Run Text="F1 - Пощадь сечения монтажной проушины" /></Span><LineBreak /><Span FontFamily="Segoe UI"><Run Text="σt - " /></Span><Span><Run Text="Предел текучести материала монтажной проушины" /></Span><LineBreak /><Span FontFamily="Segoe UI"><Run Text="δ - " /></Span><Span><Run Text="толшина проушины" /></Span><LineBreak /><Span><Run Text="h - высота проушины" /></Span><LineBreak /><Span FontFamily="Segoe UI"><Run Text="Для расчета монтажной проушины можно показать, что сила c1 максимальна при угле a = 40,7" /></Span><Span><Run Text="°" /></Span><LineBreak /><LineBreak /></TextBlock>

                        <Border
                            Height="3"
                            Background="White"
                            BorderThickness="1"
                            CornerRadius="5" />

                        <StackPanel Margin="5,5,0,0" Orientation="Horizontal">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <RadioButton
                                    x:Name="WithBushing"
                                    Grid.Column="0"
                                    Command="{Binding WithBushingCommand}"
                                    Content="С втулкой"
                                    Foreground="White"
                                    IsChecked="{Binding WithBushingChecked}" />
                                <RadioButton
                                    x:Name="WithoutBushing"
                                    Grid.Column="1"
                                    Command="{Binding WithoutBushingCommand}"
                                    Content="Без втулки"
                                    Foreground="White"
                                    IsChecked="{Binding WithoutBushingChecked}" />
                            </Grid>
                        </StackPanel>


                        <Grid
                            Height="200"
                            Margin="0,15,5,0"
                            VerticalAlignment="Top">

                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>


                            <Grid
                                x:Name="TablUnits"
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,0,0">
                                <fonds:TextBoxForData
                                    x:Name="WeightDevices"
                                    TabIndex="1"
                                    TextBlockUnit="кг."
                                    TextBlockUnitColors="{Binding UnitColorsText}"
                                    TextWeightDevice="{Binding WeightDevices, Mode=TwoWay}"
                                    Watermarks="Macca апп."
                                    WatermarksTextColors="{Binding WatermarksTextColorsG}" />
                            </Grid>
                            <Border
                                Grid.Row="0"
                                Grid.Column="0"
                                Height="3"
                                Margin="5,23,0,0"
                                Background="White"
                                BorderThickness="1"
                                CornerRadius="5" />

                            <Grid
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,0,0,0">
                                <fonds:TextBoxForData
                                    x:Name="LBigBox"
                                    TabIndex="2"
                                    TextBlockUnit="мм."
                                    TextBlockUnitColors="{Binding UnitColorsText}"
                                    TextWeightDevice="{Binding LBigBox, Mode=TwoWay}"
                                    Watermarks="L"
                                    WatermarksTextColors="{Binding WatermarksTextColorsG}" />
                            </Grid>
                            <Border
                                Grid.Row="0"
                                Grid.Column="1"
                                Height="3"
                                Margin="5,23,0,0"
                                Background="White"
                                BorderThickness="1"
                                CornerRadius="5" />

                            <Grid
                                Grid.Row="0"
                                Grid.Column="2"
                                Margin="0,0,0,0">
                                <fonds:TextBoxForData
                                    x:Name="ABigBox"
                                    TabIndex="3"
                                    TextBlockUnit="мм."
                                    TextBlockUnitColors="{Binding UnitColorsText}"
                                    TextWeightDevice="{Binding ABigBox, Mode=TwoWay}"
                                    Watermarks="A"
                                    WatermarksTextColors="{Binding WatermarksTextColorsB}" />
                            </Grid>
                            <Border
                                Grid.Row="0"
                                Grid.Column="2"
                                Height="3"
                                Margin="5,23,0,0"
                                Background="White"
                                BorderThickness="1"
                                CornerRadius="5" />

                            <Grid
                                Grid.Row="0"
                                Grid.Column="3"
                                Margin="0,0,0,0">
                                <fonds:TextBoxForData
                                    x:Name="BBigBox"
                                    TabIndex="4"
                                    TextBlockUnit="мм."
                                    TextBlockUnitColors="{Binding UnitColorsText}"
                                    TextWeightDevice="{Binding BBigBox, Mode=TwoWay}"
                                    Watermarks="B"
                                    WatermarksTextColors="{Binding WatermarksTextColorsB}" />
                            </Grid>
                            <Border
                                Grid.Row="0"
                                Grid.Column="3"
                                Height="3"
                                Margin="5,23,0,0"
                                Background="White"
                                BorderThickness="1"
                                CornerRadius="5" />

                            <Grid
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,0,0">
                                <fonds:TextBoxForData
                                    x:Name="DBox"
                                    TabIndex="4"
                                    TextBlockUnit=""
                                    TextBlockUnitColors="{Binding UnitColorsText}"
                                    TextWeightDevice="{Binding DBox, Mode=TwoWay}"
                                    Watermarks="D"
                                    WatermarksTextColors="{Binding WatermarksTextColorsG}" />
                            </Grid>
                            <Border
                                Grid.Row="1"
                                Grid.Column="0"
                                Height="3"
                                Margin="5,23,0,0"
                                Background="White"
                                BorderThickness="1"
                                CornerRadius="5" />

                            <Grid
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,0,0,0">
                                <fonds:TextBoxForData
                                    x:Name="D1Box"
                                    TabIndex="5"
                                    TextBlockUnit=""
                                    TextBlockUnitColors="{Binding UnitColorsText}"
                                    TextWeightDevice="{Binding D1Box, Mode=TwoWay}"
                                    Watermarks="D1"
                                    WatermarksTextColors="{Binding WatermarksTextColorsG}" />
                            </Grid>
                            <Border
                                Grid.Row="1"
                                Grid.Column="1"
                                Height="3"
                                Margin="5,23,0,0"
                                Background="White"
                                BorderThickness="1"
                                CornerRadius="5" />

                            <Grid
                                Grid.Row="1"
                                Grid.Column="2"
                                Margin="0,0,0,0">
                                <fonds:TextBoxForData
                                    x:Name="AlfaBox"
                                    TabIndex="6"
                                    TextBlockUnit="°"
                                    TextBlockUnitColors="{Binding UnitColorsText}"
                                    TextWeightDevice="{Binding AlfaBox, Mode=TwoWay}"
                                    Watermarks="α"
                                    WatermarksTextColors="{Binding WatermarksTextColorsB}" />
                            </Grid>
                            <Border
                                Grid.Row="1"
                                Grid.Column="2"
                                Height="3"
                                Margin="5,23,0,0"
                                Background="White"
                                BorderThickness="1"
                                CornerRadius="5" />

                            <Grid
                                Grid.Row="1"
                                Grid.Column="3"
                                Margin="0,0,0,0">
                                <fonds:TextBoxForData
                                    x:Name="YBox"
                                    TabIndex="7"
                                    TextBlockUnit="мм."
                                    TextBlockUnitColors="{Binding UnitColorsText}"
                                    TextWeightDevice="{Binding YBox, Mode=TwoWay}"
                                    Watermarks="y"
                                    WatermarksTextColors="{Binding WatermarksTextColorsB}" />
                            </Grid>
                            <Border
                                Grid.Row="1"
                                Grid.Column="3"
                                Height="3"
                                Margin="5,23,0,0"
                                Background="White"
                                BorderThickness="1"
                                CornerRadius="5" />

                            <Grid
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,0,0,0">
                                <fonds:TextBoxForData
                                    x:Name="SigmaTBox"
                                    TabIndex="8"
                                    TextBlockUnit="мм."
                                    TextBlockUnitColors="{Binding UnitColorsText}"
                                    TextWeightDevice="{Binding SigmaTBox, Mode=TwoWay}"
                                    Watermarks="σt"
                                    WatermarksTextColors="{Binding WatermarksTextColorsG}" />

                            </Grid>
                            <Border
                                Grid.Row="2"
                                Grid.Column="0"
                                Height="3"
                                Margin="5,23,0,0"
                                Background="White"
                                BorderThickness="1"
                                CornerRadius="5" />

                            <Grid
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="0,0,0,0">
                                <fonds:TextBoxForData
                                    x:Name="H1Box"
                                    TabIndex="9"
                                    TextBlockUnit="мм."
                                    TextBlockUnitColors="{Binding UnitColorsText}"
                                    TextWeightDevice="{Binding H1Box, Mode=TwoWay}"
                                    Watermarks="h1"
                                    WatermarksTextColors="{Binding WatermarksTextColorsG}" />
                            </Grid>
                            <Border
                                Grid.Row="2"
                                Grid.Column="1"
                                Height="3"
                                Margin="5,23,0,0"
                                Background="White"
                                BorderThickness="1"
                                CornerRadius="5" />

                            <Grid
                                Grid.Row="2"
                                Grid.Column="2"
                                Margin="0,0,0,0">
                                <fonds:TextBoxForData
                                    x:Name="H2Box"
                                    TabIndex="10"
                                    TextBlockUnit="мм."
                                    TextBlockUnitColors="{Binding UnitColorsText}"
                                    TextWeightDevice="{Binding H2Box, Mode=TwoWay}"
                                    Watermarks="h2"
                                    WatermarksTextColors="{Binding WatermarksTextColorsB}" />
                            </Grid>
                            <Border
                                Grid.Row="2"
                                Grid.Column="2"
                                Height="3"
                                Margin="5,23,0,0"
                                Background="White"
                                BorderThickness="1"
                                CornerRadius="5" />

                            <Grid
                                Grid.Row="2"
                                Grid.Column="3"
                                Margin="0,0,0,0">
                                <fonds:TextBoxForData
                                    x:Name="BBox"
                                    TabIndex="11"
                                    TextBlockUnit="мм."
                                    TextBlockUnitColors="{Binding UnitColorsText}"
                                    TextWeightDevice="{Binding BBox, Mode=TwoWay}"
                                    Watermarks="b"
                                    WatermarksTextColors="{Binding WatermarksTextColorsB}" />
                            </Grid>
                            <Border
                                Grid.Row="2"
                                Grid.Column="3"
                                Height="3"
                                Margin="5,23,0,0"
                                Background="White"
                                BorderThickness="1"
                                CornerRadius="5" />

                            <Grid
                                Grid.Row="3"
                                Grid.Column="0"
                                Margin="0,0,0,0">
                                <fonds:TextBoxForData
                                    x:Name="TBox"
                                    TabIndex="12"
                                    TextBlockUnit="мм."
                                    TextBlockUnitColors="{Binding UnitColorsText}"
                                    TextWeightDevice="{Binding TBox, Mode=TwoWay}"
                                    Watermarks="t"
                                    WatermarksTextColors="{Binding WatermarksTextColorsG}" />
                            </Grid>
                            <Border
                                Grid.Row="3"
                                Grid.Column="0"
                                Height="3"
                                Margin="5,23,0,0"
                                Background="White"
                                BorderThickness="1"
                                CornerRadius="5" />

                            <Grid
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="0,0,0,0">
                                <fonds:TextBoxForData
                                    x:Name="T1Box"
                                    TabIndex="13"
                                    TextBlockUnit="мм."
                                    TextBlockUnitColors="{Binding UnitColorsText}"
                                    TextWeightDevice="{Binding T1Box, Mode=TwoWay}"
                                    Watermarks="t1"
                                    WatermarksTextColors="{Binding WatermarksTextColorsG}" />
                            </Grid>
                            <Border
                                Grid.Row="3"
                                Grid.Column="1"
                                Height="3"
                                Margin="5,23,0,0"
                                Background="White"
                                BorderThickness="1"
                                CornerRadius="5" />

                            <Grid
                                Grid.Row="3"
                                Grid.Column="2"
                                Margin="0,0,0,0">
                                <fonds:TextBoxForData
                                    x:Name="T2Box"
                                    TabIndex="14"
                                    TextBlockUnit="мм."
                                    TextBlockUnitColors="{Binding UnitColorsText}"
                                    TextWeightDevice="{Binding T2Box, Mode=TwoWay}"
                                    Watermarks="t2"
                                    WatermarksTextColors="{Binding WatermarksTextColorsB}" />
                            </Grid>
                            <Border
                                Grid.Row="3"
                                Grid.Column="2"
                                Height="3"
                                Margin="5,23,0,0"
                                Background="White"
                                BorderThickness="1"
                                CornerRadius="5" />

                            <Grid
                                Grid.Row="3"
                                Grid.Column="3"
                                Margin="0,0,0,0">
                                <fonds:TextBoxForData
